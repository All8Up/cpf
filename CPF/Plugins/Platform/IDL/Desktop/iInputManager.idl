import iEventEmitter from CPF::GOM;
import iRegistry from CPF::Plugin;

module CPF::Platform::Desktop;

interface iInputDevice;

EnumerationCallback = bool (void* context, iInputDevice* device);

interface iInputManager : GOM::iEventEmitter
{
	result Initialize(Plugin::iRegistry* regy);
	result EnumerateDevices(EnumerationCallback callback, void* context);
	result GetDevice(u64 id, u64 iid, void** device);
}
